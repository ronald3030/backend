{
  "name": "pharmasys-oriental-backend",
  "version": "1.0.0",
  "description": "Backend API para el sistema de gesti√≥n de farmacias PharmaSys Oriental",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "knex:migrate:make": "knex migrate:make -x ts --knexfile knexfile.ts",
    "knex:migrate:latest": "knex migrate:latest --knexfile knexfile.ts",
    "knex:migrate:rollback": "knex migrate:rollback --knexfile knexfile.ts",
    "knex:seed:make": "knex seed:make -x ts --knexfile knexfile.ts",
    "knex:seed:run": "knex seed:run --knexfile knexfile.ts"
  },
  "keywords": [
    "pharmacy",
    "inventory",
    "pos",
    "nodejs",
    "express",
    "typescript",
    "postgresql"
  ],
  "author": "Tu Nombre",
  "license": "ISC",
  "dependencies": {
    "app-root-path": "^3.1.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.12.0",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.8",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.9",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  }
}